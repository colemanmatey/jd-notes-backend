{
  "name": "jd-notes-backend",
  "version": "1.0.0",
  "description": "Backend API for JD Notes application",
  "main": "api/index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seedData.js",
    "vercel-build": "echo 'Building for Vercel deployment'",
    "test": "echo 'No tests specified'",
    "lint": "echo 'Add ESLint configuration for linting'",
    "validate": "node -e \"console.log('✅ Package.json is valid')\"",
    "check-env": "node -e \"const vars=['MONGODB_URI']; vars.forEach(v => process.env[v] ? console.log(`✅ ${v} is set`) : console.error(`❌ ${v} is missing`));\""
  },
  "keywords": ["express", "mongodb", "api", "notes", "vercel", "serverless"],
  "author": "colemanmatey",
  "license": "ISC",
  "engines": {
    "node": ">=18.x"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
